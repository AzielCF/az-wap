# Application Settings
APP_PORT=3000
APP_DEBUG=false
APP_OS=Chrome
APP_BASIC_AUTH=user1:pass1,user2:pass2
APP_BASE_PATH=
APP_BASE_URL=http://localhost:3000
APP_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
APP_TRUSTED_PROXIES=0.0.0.0/0

# Database Settings
DB_URI="file:storages/whatsapp.db?_foreign_keys=on"
DB_KEYS_URI="file::memory:?cache=shared&_foreign_keys=on"

# WhatsApp Settings
WHATSAPP_ACCOUNT_VALIDATION=true

# Valkey Settings (Redis-compatible)
# Enable Valkey for distributed session/presence storage
VALKEY_ENABLED=false
# Valkey server address (host:port)
VALKEY_ADDRESS=localhost:6379
# Valkey password (optional, leave empty if no auth)
VALKEY_PASSWORD=
# Valkey database index (0-15 for standalone mode)
VALKEY_DB=0
# Key prefix for namespacing (useful for multi-tenant setups)
VALKEY_KEY_PREFIX=azwap: